<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
  <h1 class="margin">User Login</h1>
</div>

<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                  <div class="form-top">
                    <div class="form-top-left">
                        <p>Enter your username and password to log on:</p>
                    </div>
                    <div class="form-top-right">
                      <i class="fa fa-lock"></i>
                    </div>
                    </div>
                    <div class="form-bottom">
                      {{#if msg}}
                        <div class="message">
                          {{msg}}
                        </div>
                      {{/if}}
                  <form role="form" action="/login" method="post" class="login-form">
                    <div class="form-group">
                      <label class="sr-only" for="form-username">Username</label>
                        <input type="text" name="Username" value="{{Username}}" placeholder="Username..." class="form-username form-control" id="form-username">
                      </div>
                      <div class="form-group">
                        <label class="sr-only" for="form-password">Password</label>
                        <input type="password" name="Password" value="{{Password}}" placeholder="Password..." class="form-password form-control" id="form-password">
                      </div>
                      <button type="reset" class="btn btn-default">Cancel</button>
                      <button type="submit" class="btn btn-default">Sign in!</button>
                      <div class="form-group">
                        <div class="col-sm-4">
                          <div class="message">
                            <h4 id='warning'>{{messages.warning}}</h4>
                          </div>
                        </div>
                      </div>
                  </form>
                </div>
                </div>
            </div>
