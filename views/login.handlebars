<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
  <h1 class="margin">User Login</h1>
</div>

<form id="form_text" role="form" class="form-horizontal" action="/users/add2" method="POST">
  <fieldset>
    <!-- <legend>Login</legend> -->
    <div class="form-group">
      <label for="inputUsername" class="col-lg-2 control-label">Username</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputUsername" placeholder="Username" name="Usersname" value="{{Usersname}}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="Password" value="{{Password}}">
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
