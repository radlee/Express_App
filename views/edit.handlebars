<h1>Edit product</h1>

<form role="form" action="/products/update/{{data.id}}" method="POST">
	<div class="form-group">
		<label for="des">Category </label>
		<select class="btn btn-primary btn-block dropdown-toggle" type="button" data-toggle="dropdown" name="CategoryID">
			{{#categories}}
				<option {{selected}} value="{{id}}">{{Category}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="form-group">
		<label for="des">Description</label>
		<input type="text" class="form-control" name="Product" value="{{data.Product}}">
	</div>

	<button type="submit" class="btn btn-default">Submit</button>
</form>

