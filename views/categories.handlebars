<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
    <h1 id="csricodexmlab_text" class="margin">Categories</h1>
</div>
<div id="output">
    <p class="buttons_mobile">
        <a style="color:white" class="btn btn-success btn-lg" href="/categories/add">
            <span class="glyphicon glyphicon-plus"></span> Add a Category
        </a>
    </p>
    <div>
        <div class="form-group pull-right">
            <input type="text" id="form-control" class="search form-control" placeholder="What you looking for?">
        </div>
        <span class="counter pull-right"></span>

        <table style="width:100%" class="table table-hover results">
            <thead>
                <tr id="Heading">
                    <th>Category Name</th>
                    <th>Edit Category</th>
                    <th>
                        <!-- <a id="button" class=btn name=submit value=Login type=submit
                            onclick="checkBoxDemo()">
                            <span class="glyphicon glyphicon-trash"></span> Delete selected
                        </a> -->
                        <P>
                            <INPUT class="btn btn-raised btn-warning" name=submit value="Delete Selected" type=submit onclick="checkBoxDemo()">
                        </P>
                    </th>
                </tr>
                <tr class="warning no-result">
                    <td colspan="4"><i class="fa fa-warning"></i> No result</td>
                </tr>
            </thead>
            <tr>
                {{#categories}}
                    <th value="{{id}}" class="info">{{Category}}</th>
                    <td class="para"><strong><span style="color:#00adc8">
          <a type="button" class="btn btn-warning" href="/categories/edit/{{id}}">
          <span class="glyphicon glyphicon-edit"></span> Edit
        </a></span></strong>
                    </td>
                    <td class="para">
                        <div class="checkbox">
                            <label>
                                <input id="checked" class="value" type="checkbox" value="{{id}}">
                                <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                            </label>
                        </div>
                    </td>
            </tr>
            {{/categories}}
        </table>
    </div>
</div>

