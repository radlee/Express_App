<h1>Edit user</h1>

<form class="form-horizontal" action="/users/update/{{data.user_id}}" method="POST">

	<div class="form-group">
		<label for="" class="col-sm-2 control-label">User Name</label>
		<div class="col-sm-2">
			<input type="text" class="form-control" name="Username" value="{{Username}}">
		</div>
	</div>

	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Password</label>
		<div class="col-sm-3">
			<input type="password" class="form-control" name="Password" value="{{Password}}">
		</div>
	</div>

	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Email</label>
		<div class="col-sm-3">
			<input type="text" class="form-control" name="Email" value="{{Email}}">
		</div>
	</div>

	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Role</label>
		<div class="col-sm-2">
			<input type="text" class="form-control" name="is_admin" value="{{is_admin}}">
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="col-sm-0">
				<button type="submit" class="btn btn-info">Submit</button>
			</div>
		</div>
	</div>
</form>
