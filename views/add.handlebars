
<h1>Add product</h1>

<form action="/products/add" method="POST">
	<div class="dropdown">
		<label for="des">Category</label>
		<select class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" name="CategoryID">
			{{#categories}}
				<option value="{{id}}">{{Category}}</option>
			{{/categories}}
		</select>
	</div>

	<div class="form-group">
		<label for="des">Description</label>
		<input type="text" class="form-control" id="pwd" name="Product" value="{{Product}}">
	</div>

	<button type="submit" class="btn btn-default">Submit</button>
</form>
