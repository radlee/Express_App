<h1>Add user</h1><br>

<form class="form-horizontal" action="/users/add" method="POST">

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">User Name </label>
			<div class="col-sm-2">
				<input type="text" name="Username" value="{{Username}}">
			</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Password </label>
				<div class="col-sm-3">
					<input type="password" name="Password" value="{{Password}}">
				</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Email</label>
			<div class="col-sm-3">
				<input type="email" name="Email" value="{{Email}}">
			</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Role</label>
			<div class="col-sm-2">
				<input type="text" name="is_admin" value="{{is_admin}}">
			</div>
		</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="col-sm-0">
				<button type="submit" class="btn btn-info">Submit</button>
			</div>
		</div>
	</div>
</form>
