<h1>Edit Purchases</h1>

<form role="form" action="/purchases/update/{{data.id}}" method="POST">

	<div class="form-group">
		<label for="des">Shop</label>
		<input type="text" class="form-control" name="Category" value="{{data.Shop}}">
	</div>

	<div class="form-group">
		<label for="des">Date</label>
		<input type="text" class="form-control" name="Category" value="{{data.Date}}">
	</div>

	<div class="form-group">
		<label for="des">Quantity</label>
		<input type="text" class="form-control" name="Category" value="{{data.Quantity}}">
	</div>

	<div class="form-group">
		<label for="des">Cost Per Item</label>
		<input type="text" class="form-control" name="Category" value="{{data.CostPerItem}}">
	</div>

	<div class="form-group">
		<label for="des">Product ID</label>
		<input type="text" class="form-control" name="Category" value="{{data.ProductID}}">
	</div>

	<button type="submit" class="btn btn-default">Submit</button>
</form>
