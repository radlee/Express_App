<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
    <h1 class="margin">Edit Purchases</h1>
    <h3 id='warning'>{{messages.warning}}</h3>
</div>
<form class="form_text" role="form" action="/purchases/update/{{data.id}}" method="POST">

	<div class="form-group">
		<label for="des">Shop</label>
		<input type="text" class="form-control" name="Shop" value="{{data.Shop}}">
	</div>

	<div class="form-group">
		<label for="des">Date</label>
		<input type="text" class="form-control" name="Date" value="{{data.Date}}">
	</div>

	<div class="form-group">
		<label for="des">Quantity</label>
		<input type="text" class="form-control" name="Quantity" value="{{data.Quantity}}">
	</div>

	<div class="form-group">
		<label for="des">Cost Per Item</label>
		<input type="text" class="form-control" name="CostPerItem" value="{{data.CostPerItem}}">
	</div>

	<div class="form-group">
		<label for="des">Product ID</label>
		<input type="text" required placeholder="Product ID cannot be greater than the number of prodcuts in the database table" class="form-control" name="ProductID"
		 value="{{data.ProductID}}">
	</div>

	<button type="submit" class="btn btn-default">Submit</button>
</form>
