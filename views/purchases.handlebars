<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
  <h1 class="margin">Purchases</h1>
</div>

<div id="output">
  <p>
    <a style="color:white" class="btn btn-success btn-lg" href="/purchases/add">
      <span class="glyphicon glyphicon-plus"></span> Add a Purchase
    </a>
  </p>

  <div>
    <table style="width:100%" class="table table-hover">
      <thead>
      <tr id="Heading">
        <!-- <th>Main ID Number</th> -->
        <th>Supplier</th>
        <th>Date</th>
        <th>Quantity</th>
        <th>Cost Per Item</th>
        <th>Product ID Number</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
      <tr>
        {{#purchases}}
        <!-- <th id="des" class="info"><span style="color:#ffb900">ID#</span> : {{id}}</th> -->
        <th id="des" class="info">{{Shop}}</th>
        <th id="des" class="info">{{Date}}</th>
        <th id="des" class="info">{{Quantity}}</th>
        <th id="des" class="info">R {{CostPerItem}}</th>
        <th id="des" class="info"><span style="color:#ffb900">Product ID#</span> : {{ProductID}}</th>
        <td class="para"><strong><span style="color:#00adc8">
          <a type="button" class="btn btn-warning" href="/purchases/edit/{{id}}">
          <span class="glyphicon glyphicon-edit"></span> Edit
        </a></span></strong>
        </td>

        <td class="para"><a type="button" class="btn btn-danger" href="/purchases/delete/{{id}}">
        <span class="glyphicon glyphicon-trash"></span> Delete
      </a>
        </td>
      </tr>{{/purchases}}
    </table>
  </div>
</div>


{{#no_products}}
  <p>No products available yet. Add some above.</p>
{{/no_products}}
