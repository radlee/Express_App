<h1>Add Purchase</h1>
<div class="divMan">


	<form role="form" action="/purchases/add" method="POST">
		<div class="form-group">
			<label for="">Supplier</label>
			<input type="text" class="form-control" name="Category" value="{{Shop}}">
		</div>
		<div class="form-group">
			<label for="des">Date</label>
			<input type="text" class="form-control" name="Category" value="{{Date}}">
		</div>
		<div class="form-group">
			<label for="des">Quantity</label>
			<input type="text" class="form-control" name="Category" value="{{Quantity}}">
		</div>
		<div class="form-group">
			<label for="des">Cost Per Item</label>
			<input type="text" class="form-control" name="Category" value="{{CostPerItem}}">
		</div>
		<div class="form-group">
			<label for="des">Product ID</label>
			<input type="text" class="form-control" name="Category" value="{{ProductID}}">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>
