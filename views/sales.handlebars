<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
  <h1 class="margin">Sales</h1>
</div>

<div id="output">
  <p>
    <a style="color:white" class="btn btn-success btn-lg" href="/sales/add">
      <span class="glyphicon glyphicon-plus"></span> Add a Sale
    </a>
  </p>

  <div>
    <div class="form-group pull-right">
        <input type="text" class="search form-control" placeholder="What you looking for?">
    </div>
    <span class="counter pull-right"></span>
    <table style="width:100%" class="table table-hover results">
      <thead>
      <tr id="Heading">
        <!-- <th>Main ID Number</th> -->
        <th>Date</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Product ID Number</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <tr class="warning no-result">
        <td colspan="4"><i class="fa fa-warning"></i> No result</td>
      </tr>
    </thead>
      <tr>
        {{#sales}}
        <!-- <th id="des" class="info"><span style="color:#ffb900">ID#</span> : {{id}}</th> -->
        <th id="des" class="info">{{Date}}</th>
        <th id="des" class="info">{{Quantity}}</th>
        <th id="des" class="info">R {{Price}}</th>
        <th id="des" class="info"><span style="color:#ffb900">Product ID#</span> : {{ProductID}}</th>
        <td class="para"><strong><span style="color:#00adc8">
          <a type="button" class="btn btn-warning" href="/sales/edit/{{id}}">
          <span class="glyphicon glyphicon-edit"></span> Edit
        </a></span></strong>
        </td>

        <td class="para"><a type="button" class="btn btn-danger" href="/sales/delete/{{id}}">
        <span class="glyphicon glyphicon-trash"></span> Delete
      </a>
        </td>
      </tr>{{/sales}}
    </table>
  </div>
</div>


{{#no_products}}
  <p>No products available yet. Add some above.</p>
{{/no_products}}
